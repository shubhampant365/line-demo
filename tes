<template>
    <lightning-card title="Work Order">
        <template if:true={isRelevantBusinessUnit}>
            <c-asset-onboarding-screen record-id={recordId}></c-asset-onboarding-screen>
        </template>
        <template if:false={isRelevantBusinessUnit}>
            <c-asset-onboard-no-scan record-id={recordId}></c-asset-onboard-no-scan>
        </template>
    </lightning-card>
</template>


import { LightningElement, api, wire, track } from 'lwc';
import { getRecord } from 'lightning/uiRecordApi';
import BUSINESS_UNIT_FIELD from '@salesforce/schema/WorkOrder.Business_Unit__c';

const FIELDS = [BUSINESS_UNIT_FIELD];

export default class AssetOnboardingParent extends LightningElement {
    @api recordId;  // This will be the ID of the WorkOrderLineItem
    @track workOrderId;  // ID of the WorkOrder parent
    @track businessUnit;

    // Assume the WorkOrder ID is related to WorkOrderLineItem
    connectedCallback() {
        // Fetch the WorkOrder ID from WorkOrderLineItem
        // This should be updated based on the actual API
        getRecord({ recordId: this.recordId, fields: ['WorkOrderLineItem.WorkOrderId'] })
            .then(record => {
                this.workOrderId = record.fields.WorkOrderId.value;
            });
    }

    @wire(getRecord, { recordId: '$workOrderId', fields: FIELDS })
    loadBusinessUnit({ error, data }) {
        if (error) {
            console.error(error);
        } else if (data) {
            this.businessUnit = data.fields.Business_Unit__c.value;
        }
    }

    get isRelevantBusinessUnit() {
        return this.businessUnit === 'Locks' || this.businessUnit === 'Appliances';
    }
}



<template>
    <lightning-card title="Other Component">
        <!-- Add your custom content for the other component here -->
        <p>This is the other component displayed for Business Units other than Locks or Appliances.</p>
    </lightning-card>
</template>


import { LightningElement, api } from 'lwc';

export default class AssetOnboardNoScan extends LightningElement {
    @api recordId;
}
